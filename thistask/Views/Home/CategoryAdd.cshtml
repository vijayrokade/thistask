@{
    ViewBag.Title = "Add Category";
}

<div class="jumbotron">
    <h1>Add Details of Category</h1>
</div>

<div class="row">
    <form action="/Home/CreateCategory" method="post" class="loginbox">

        <label class="lblname"> Category Name:- </label>
        <input type="text" name="name" size="100" class="txtCategoryName" required /><br>
        <br />

        <button type="submit" class="btnsubmit">Save</button>&nbsp;&nbsp;&nbsp;
        <a href="/Home/CategoryList"> Cancel</a>



    </form>

    @ViewBag.CategoryId;
</div>